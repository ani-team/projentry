{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "lib": ["es2020.string"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
